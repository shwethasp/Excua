<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Name of style have two parts. first is Size of font, then Styleof font -->

    <style name="BigBold">
        <item name="fontPath">fonts/GothamMedium.ttf</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="BigNormal">
        <item name="fontPath">fonts/GothamBook.ttf</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="ModerateBold">
        <item name="fontPath">fonts/GothamMedium.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="ModerateNormal">
        <item name="fontPath">fonts/GothamBook.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="ModerateThin">
        <item name="fontPath">fonts/GothamLight.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>


    <style name="SmallBold">
        <item name="fontPath">fonts/GothamMedium.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="SmallNormal">
        <item name="fontPath">fonts/GothamBook.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>

    <style name="SmallThin">
        <item name="fontPath">fonts/GothamLight.ttf</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_green</item>
    </style>


    <style name="BigBold.White">
        <item name="android:textColor">#ffffff</item>
    </style>


</resources>
