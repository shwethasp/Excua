<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/bg" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view_btw_username_pass"
                android:background="@drawable/rounded_corner_username_editbox"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/fluracent_green"
                    android:hint="@string/username" />

                <android.support.design.widget.TextInputEditText
                    style="@style/ModerateNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="@string/username"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/fluracent_green" />

            </LinearLayout>

            <View
                android:id="@+id/view_btw_username_pass"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_above="@+id/password_linear_layout" />

            <LinearLayout
                android:id="@+id/password_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/view_btw_signin_pass"
                android:background="@drawable/rounded_corner_password_editbox"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/layout_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.TextInputEditText
                    style="@style/ModerateNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:hint="@string/password"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/fluracent_green" />

            </LinearLayout>

            <View
                android:id="@+id/view_btw_signin_pass"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_above="@+id/login_btn" />

            <Button
                android:id="@+id/login_btn"
                style="@style/BigBold.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/rounded_corner_loginbtn"
                android:gravity="center"
                android:text="@string/login_text"
                android:textAllCaps="false" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/app"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textStyle="bold|italic" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                style="@style/BigBold.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
               android:paddingRight="35dp"
                android:paddingLeft="35dp"
                android:background="@drawable/rounded_corner_signup"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/signup_text"
                android:textAllCaps="false" />
        </RelativeLayout>
    </LinearLayout>




</FrameLayout>